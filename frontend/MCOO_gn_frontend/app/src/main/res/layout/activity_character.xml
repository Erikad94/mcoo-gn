<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/character_layout_404"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:background="@drawable/custom_background"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:context="mcoo.mcoo_gn_frontend.CharacterActivity">

        <TextView
            android:id="@+id/textCharNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Character not found"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff0000" />
    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/character_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:background="@drawable/custom_background"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            tools:context="mcoo.mcoo_gn_frontend.CharacterActivity">

            <TextView
                android:id="@+id/character_labelName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/character_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/character_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/character_labelName"
                android:background="@android:drawable/editbox_background"
                android:enabled="false"
                android:hint="Name "
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/character_labelNationality"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/character_nationality"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/character_labelName"
                android:paddingLeft="5dp"
                android:text="Nationality "
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/character_nationality"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_name"
                android:layout_toRightOf="@id/character_labelNationality"
                android:background="@android:drawable/editbox_background"
                android:enabled="false"
                android:hint="Nationality"
                android:inputType="textPersonName"
                android:text="Nationality"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/character_labelRace"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/character_race"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/character_labelNationality"
                android:paddingLeft="5dp"
                android:text="Race "
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/character_race"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_nationality"
                android:layout_toRightOf="@id/character_labelRace"
                android:background="@android:drawable/editbox_background"
                android:enabled="false"
                android:hint="Race"
                android:inputType="textPersonName"
                android:text="Race"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/character_labelProfession"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/character_profession"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/character_labelRace"
                android:paddingLeft="5dp"
                android:text="Profession "
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/character_profession"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_race"
                android:layout_toRightOf="@id/character_labelProfession"
                android:background="@android:drawable/editbox_background"
                android:enabled="false"
                android:hint="Profession"
                android:inputType="textPersonName"
                android:text="Profession"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/character_labelClass"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/character_class"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/character_labelProfession"
                android:paddingLeft="5dp"
                android:text="Class "
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/character_class"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_profession"
                android:layout_toRightOf="@id/character_labelClass"
                android:background="@android:drawable/editbox_background"
                android:enabled="false"
                android:hint="Class"
                android:inputType="textPersonName"
                android:text="Class"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/character_labelBelief"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/character_belief"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/character_labelClass"
                android:paddingLeft="5dp"
                android:text="Belief "
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/character_belief"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_class"
                android:layout_toRightOf="@id/character_labelBelief"
                android:background="@android:drawable/editbox_background"
                android:enabled="false"
                android:hint="Belief"
                android:inputType="textPersonName"
                android:text="Belief"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/character_labelMax_hp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/character_max_hp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/character_labelBelief"
                android:paddingLeft="5dp"
                android:text="Max HP "
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/character_max_hp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_belief"
                android:layout_toRightOf="@id/character_labelMax_hp"
                android:background="@android:drawable/editbox_background"
                android:enabled="false"
                android:hint="Max HP"
                android:inputType="number"
                android:text="Max HP"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/character_labelSkills"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/character_max_hp"
                android:paddingLeft="5dp"
                android:text="Skills "
                android:textColor="#ff000000" />

            <ListView
                android:id="@+id/character_skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_max_hp"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/character_labelSkills"
                android:divider="#00000000"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/character_labelXp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/character_xp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/character_labelSkills"
                android:paddingLeft="5dp"
                android:text="XP "
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/character_xp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_skills"
                android:layout_toRightOf="@id/character_labelXp"
                android:background="@android:drawable/editbox_background"
                android:enabled="false"
                android:hint="XP"
                android:inputType="number"
                android:text="XP"
                android:textColor="#ff000000" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/character_xp">

                <Button
                    android:id="@+id/character_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_xp"
                    android:onClick="onClickEditCharacter"
                    android:text="Edit"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/character_cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_xp"
                    android:onClick="onClickCancelCharacter"
                    android:text="Cancel"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/character_update_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickUpdateCharacter"
                    android:text="Update"
                    android:visibility="invisible" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>